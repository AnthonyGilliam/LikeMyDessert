<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Bundle/Content/css/layout")
        @RenderSection("Styles", false)
    </head>

    <body>
        @Html.Partial("_Header")

        <div id="content">
            @RenderBody()
        </div>

        <footer></footer>

        @Scripts.Render("~/Bundle/Scripts/layout")
        @RenderSection("Scripts", false)
    </body>
</html>
